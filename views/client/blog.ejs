      name="keywords"
      content="code, code warriors, code warrior, cw, code wars, dpsvk"
    />
    
  </head>
  <body class="dark">
    <script>
      let theme = localStorage.getItem("theme");

      if (theme == "light") {
        document.body.classList.add("light");
        theme = localStorage.setItem("theme", "light");
      } else {
        document.body.classList.remove("light");
        theme = localStorage.setItem("theme", "dark");
      }
    </script>
    <main>
      <nav>
            <div class="navLeft">
                <a class="navBtn" href="https://discord.gg/aztyaceuY2">Join Discord</a>
                <a class="navLink active" href="#">Blog</a>
                <a class="navLink" href="/archives/creative">Archive</a>
                <a class="navLink" href="/resources">Resources</a>
                <div class="ham">
                    <div class="hamLine"></div>
                </div>
            </div>
            <a href="/" class="navMid">CW</a>
            <div class="navRight">
                <a class="navLink" href="/">Home</a>
                <a class="navLink" href="/members">Members</a>
                <a class="navLink" href="/contacts">Contact</a>
                <a class="navLink" href="/alumni">Alumni</a>
                <i class="fas fa-lightbulb"></i>
            </div>
        </nav>
        
        <div class="side">
                        <a style="--navD: 0.4s" target="_blank" class="navBtn" href="https://discord.gg/aztyaceuY2">Join Discord</a>

            <a style="--navD: 0.44s" class="navLink" href="/">Home</a>
            <a style="--navD: 0.48s" class="navLink active" href="#">Blog</a>
            <a style="--navD: 0.52s" class="navLink" href="/archives/creative">Archive</a>
            <a style="--navD: 0.56s" class="navLink" href="/resources">Resources</a>
            <a style="--navD: 0.6s" class="navLink" href="/members">Members</a>
            <a style="--navD: 0.64s" class="navLink" href="/contacts">Contact</a>
            <a style="--navD: 0.68s" class="navLink" href="/alumni">Alumni</a>
        </div> 
    </main>

    <% if (!noBlog) { %>
      <section class="container">
      <div class="input-container">
        <div class="input">
          <input id="searchBar" type="text" placeholder="Search" />
          <button>
              <img class="darkR" src="../assets/search.svg" alt="" /><img
                class="lightR"
                src="../assets/search2.svg"
                alt=""
              />
            </button>
        </div>

        <div class="sortCont">
          <div class="sort">
            <div class="by">Sort by Year</div>
            <div class="buttn">
              <i class="fas fa-sort-down"></i>
            </div>
            <div class="options">
              <div class="option allSort">All</div>
              <% for (let year of years) { %>
                <div class="option"><%= year %></div>
              <% } %>
            </div>
          </div>
        </div>
      </div>

      <div class="items">
        <% for (let blog of blogs) { %>
        <div class="item" id="item1">
          <h1><%= blog.title %></h1>
          <span class="year"><%= blog.updatedAt.getFullYear() %></span>
          <h3>Posted on <%= blog.updatedAt.getDate() %>/<%= blog.updatedAt.getMonth() %>/<%= blog.updatedAt.getFullYear() %></h3> <span>By <%= blog.author %></span></h3>
          <img class="images" src="/img/<%= blog.image %>" />
          <p><%= blog.content %></p>
        </div>
        <% } %>
      </div>

      <div class="titles">
        <% for (let i = 0; i < Object.keys(titles).length; i++) { %>
        <div class="unit">
          <h1><%= Object.keys(titles)[i] %></h1>
          <a href="/blog/<%= Object.values(titles)[i] %>">Go to Blog</a>
        </div>
        <% } %>
    </section>

    <main>
      <form class="page" action="/blogs">
        <div class="arrows">
          <% if (activePage == 1) { %>
            <button name="page" type="submit" value="<%= activePage %>">
              <i class="fas fa-arrow-left"></i>
            </button>
          <% } else { %>
            <button name="page" type="submit" value="<%= activePage - 1 %>">
              <i class="fas fa-arrow-left"></i>
            </button>
          <% } %>
          <% if (activePage + 1 > pages) { %>
            <button name="page" type="submit" value="<%= activePage %>">
              <i class="fas fa-arrow-right"></i>
            </button>
          <% } else { %>
            <button name="page" type="submit" value="<%= activePage + 1 %>">
              <i class="fas fa-arrow-right"></i>
            </button>
          <% } %>
        </div>
        <div class="nums">
          <% for (let i = 1; i <= pages; i++) { %> <% if (i == activePage) { %>
          <button
            name="page act"
            type="submit"
            class="pageActive"
            value="<%= i %>"
          >
            <%= i %>
          </button>
          <% } else { %>
          <button name="page" type="submit" value="<%= i %>"><%= i %></button>
          <% } %> <% } %>
        </div>
      </form>
    </main>
    <% } else { %>
      <div class="bb" style="width: 100%;height: 70vh;display: flex; justify-content: center; align-items: center;">
      <h3 style="font-family: bold; font-size: 4vh;">No Blogs to Show</h3></div>
    <% } %>

    <footer>
      <p>
        <span id="titleF"></span
        ><span id="cursorF" class="cursor footcur"></span>
      </p>
      <div class="footSocial">
        <a href="https://www.facebook.com/codewarriors/">
          <i class="fab fa-facebook-square"></i>
        </a>
        <a href="https://www.instagram.com/codewarriors42/?hl=en">
          <i class="fab fa-instagram"></i>
        </a>
        <a href="https://github.com/codewarriors42">
          <i class="fab fa-github"></i>
        </a>
        <a href="https://www.behance.net/codewarriors">
          <i class="fab fa-behance"></i>
        </a>
      </div>
    </footer>

    <script src="../js/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/parallax/3.1.0/parallax.min.js"></script>
    <script src="../js/mode.js"></script>
    <script src="../js/blog.js"></script>
    <script src="../js/page.js"></script>
  </body>
</html>
